@model IEnumerable<ARPatients.Models.MedicationType>

@{
    ViewData["Title"] = "Medication Type";
}

<h1>Medication Types</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @*@Html.ActionLink(item.Name, "Index", "ARMedications", new { id = item.MedicationTypeId }, null)*@
               <a asp-controller="ARMedications" asp-action="Index" asp-route-medId="@item.MedicationTypeId">@item.Name</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicationTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MedicationTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicationTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
